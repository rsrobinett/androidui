<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.oregonstate.rsrobinett.androidui">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutActivity"
            android:label="@string/title_activity_linear_layout" />
        <activity
            android:name=".GridLayoutActivity"
            android:label="@string/title_activity_grid_layout"/>
        <activity
            android:name=".TableLayoutActivity"
            android:label="@string/title_activity_table_layout"/>
        <activity
            android:name=".AssignmentActivity"
            android:label="@string/title_activity_assignment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabbedLayoutActivity"
            android:label="@string/title_activity_tabbed_layout"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>