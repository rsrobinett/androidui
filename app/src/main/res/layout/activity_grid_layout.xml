<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount = "10"
    android:orientation="vertical"
    tools:context="edu.oregonstate.rsrobinett.androidui.GridLayoutActivity">

    <TextView style="@style/grid_text"
        android:id="@+id/alergy1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:text="Alergy 1"
            />

    <TextView style="@style/grid_text"
        android:id="@+id/alergy2"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:text="Alergy 2"
            />
    <TextView style="@style/grid_text"
        android:id="@+id/alergy3"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:text="Alergy 3"
            />

    <TextView style="@style/grid_text"
        android:id="@+id/alergy4"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:text="Alergy 4"
            />
    <TextView style="@style/grid_text"
        android:id="@+id/alergy5"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:text="Alergy 5"
            />

    <TextView style="@style/grid_text"
        android:id="@+id/alergy6"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:text="Alergy 6"
            />

</GridLayout>
